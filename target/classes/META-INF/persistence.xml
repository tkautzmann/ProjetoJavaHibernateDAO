<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
        version="2.0">
        
        <persistence-unit name="SisEscola">
        	<properties>
        		<property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost/sisescola?useTimezone=true&amp;serverTimezone=UTC" />
        		<property name="jakarta.persistence.jdbc.user" value="root" />
        		<property name="jakarta.persistence.jdbc.password" value="ienh" />
        		<property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver" />
        		<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
        		<property name="hibernate.format_sql" value="false" />
        		<property name="hibernate.show_sql" value="false" />	
        	</properties>
        
        </persistence-unit>
        
</persistence>